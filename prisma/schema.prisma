generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  ratings      Rating[]
  notifications Notification[]
}

model Professor {
  id         String   @id @default(cuid())
  name       String
  department String
  school     String
  createdAt  DateTime @default(now())
  ratings    Rating[]
  courses Course[]
}

model Rating {
  id          String   @id @default(cuid())
  stars       Int
  comment     String
  createdAt   DateTime @default(now())

  userId      String
  professorId String

  user        User      @relation(fields: [userId], references: [id])
  professor   Professor @relation(fields: [professorId], references: [id])

  @@index([professorId])
  @@index([userId])
}
model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title     String
  body      String?
  href      String?

  readAt    DateTime?
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}
model Course {
  id          String   @id @default(cuid())
  name        String
  code        String?
  createdAt   DateTime @default(now())

  professorId String
  professor   Professor @relation(fields: [professorId], references: [id], onDelete: Cascade)

  @@index([professorId])
}